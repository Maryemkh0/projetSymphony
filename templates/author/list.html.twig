<h1>Authors List</h1>

{% if authors is defined and authors is not empty %}

    <p><strong>Nombre d'auteurs :</strong> {{ totalAuthors }}</p>
    <p><strong>Nombre total de livres :</strong> {{ totalBooks }}</p>

    <ul>
        {% for author in authors %}
            <li style="margin-bottom: 15px;">
                <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="80"><br>
                <strong>{{ author.username|upper }}</strong><br>
                Email: {{ author.email }}<br>
                Books: {{ author.nb_books }}<br>
                <a href="{{ path('author_details', {'id': author.id}) }}">➡️ Détails</a>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p style="color: red;">Aucun auteur trouvé.</p>
{% endif %}
